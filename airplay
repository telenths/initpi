set -x

sudo apt-get update
sudo apt-get -y upgrade
sudo apt-get -y install libssl-dev libavahi-client-dev libasound2-dev

git clone -b 1.0-dev git://github.com/abrasive/shairport.git
cd shairport
sudo ./configure
sudo make
sudo make install

sudo cp ./script/debian/init.d/shairport /etc/init.d/
sudo cp ./script/debian/logrotate.d/hairport /etc/logrotate.d/
sudo cp ../airplay/default/shairport /etc/default/
